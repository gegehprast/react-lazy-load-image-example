{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "off",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/no-unescaped-entities": [
            "off"
        ],
        "react/react-in-jsx-scope": [
            "off"
        ],
        "react/prop-types": [
            "off"
        ],
        "react-hooks/rules-of-hooks": [
            "error"
        ],
        "react-hooks/exhaustive-deps": [
            "warn"
        ]
    }
}
